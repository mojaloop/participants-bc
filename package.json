{
  "name": "@mojaloop/participant-bc",
  "version": "0.0.1",
  "description": "mojaloop participant bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/participant-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/participant-bc/issues#readme"
  },
  "contributors": [
    "Jason Bruwer <jason.bruwer@coil.com>"
  ],
  "scripts": {
    "prepare": "husky install",
    "start:logging-svc": "npm -w @mojaloop/participants-bc-svc run start",
    "build": "npm -ws run build",
    "watch": "npm -ws --parallel -v run watch",
    "clean": "yarn run clean:dist",
    "clean:npm": "rm -Rf node_modules && npm -ws run clean:npm",
    "clean:dist": "npm -ws run clean:dist",
    "pretest": "echo 'FIX ME'",
    "standard": "yarn run --no-progress --stream lint'",
    "lint": "npm -ws -p run lint",
    "lint:fix": "npm -ws -p run lint:fix",
    "test:unit": "npm -ws run test:unit",
    "test:coverage": "npm -ws --parallel -v run test:coverage",
    "test:coverage-check": "npm -ws --parallel -v run test:coverage-check",
    "test:integration": "npm -ws --parallel -v run test:integration",
    "audit:check": "npm -ws --parallel -v run audit:check",
    "dep:check": "npm -ws --parallel -v run dep:check",
    "dep:update": "npm -ws --parallel -v run dep:update",
    "publish:public-types": "npm -w @mojaloop/public-types-lib run npm_publish",
    "publish:client-lib": "npm -w @mojaloop/client run npm_publish"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-check-updates": "^12.5.11",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4"
  },
  "workspaces": [
    "modules/participant-bc-private-types-lib",
    "modules/participant-bc-public-types-lib",
    "modules/*"
  ]
}
