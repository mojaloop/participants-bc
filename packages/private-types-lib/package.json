{
  "name": "@mojaloop/participant-bc-private-types-lib",
  "version": "0.0.1",
  "description": "mojaloop participants private shared types",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/participants-bc/",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/participants-bc/issues#readme"
  },
  "contributors": [
    "Jason Bruwer <jason.bruwer@coil.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "scripts": {
    "start": "npm run service",
    "service": "tsc && node dist/index.js --config ../../.env",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "clean:dist": "rm -rf dist",
    "clean:node-modules": "rm -rf node_modules",
    "clean:dist-and-node-modules": "rm -rf dist node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test:unit": "jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "jest --passWithNoTests --coverage --coverageThreshold='{}' --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.test.ts'",
    "audit:check": "npm npm audit",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u",
    "npm_publish": "npm version patch && npm publish --tag=latest --access public"
  },
  "dependencies": {
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13"
  }
}
